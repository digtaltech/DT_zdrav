<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_round">

    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="17dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Помогите добраться до больницы" />

    <TextView

        android:gravity=""
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="17dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нужна помощь, не могу добраться до больницы. Кто-нибудь в этом районе, было бы не плохо, если бы вы мне помогли добраться до неё." />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="17dp"
        android:text="•	Сергей Демерчьян"
        />
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="17dp"
        android:text="•	+7 988 168 66 02"
        />
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="17dp"
        android:text="•	Срок: 2 дня"
        />

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        style="@style/blueButton"
        android:onClick="onClickSignUp"
        android:text="Связаться"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />
        <Button
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            style="@style/loginButton"
            android:onClick="onClickSignUp"
            android:text="Принять заявку"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>